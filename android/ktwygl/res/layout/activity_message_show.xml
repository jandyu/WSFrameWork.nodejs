<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FlashHTMLActivity" >

    <apk.customerview.TitleBar android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="42dp"/>
    
    <RelativeLayout android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"
        android:padding="10dp">
	    
	    <TextView android:id="@+id/labDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:textColor="#000000"
	        android:textSize="16sp"/>
	    
	    <TextView android:id="@+id/labText"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@+id/labDate"
	        android:layout_above="@+id/btnDelete"
	        android:paddingTop="20dp"
	        android:textColor="#000000"
	        android:textSize="16sp"/>
	    
	    <Button android:id="@+id/btnDelete"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@drawable/button_font_style"
		    android:background="@drawable/button_stroke_style_1"
		    android:paddingTop="8dp"
		    android:paddingBottom="8dp"
	        android:layout_alignParentBottom="true"
	        android:text="删除"/>
    </RelativeLayout>

</RelativeLayout>
